<div class="container-fluid">
  <div class="row">
    <div class="col-sm"></div>
    <div class="col-sm">
      <div class="container center">
        <h2>Sign up</h2>
      </div>
      <div class="panel panel-default">
        <div class="panel-body">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            
            <div class="form-group">
              <div class="col-sm">
                <%= f.label :username, 'Username', class: 'col-sm-4 control-label' %><br />
              </div>
              <div class="col-sm">
                <%= f.text_field :username, autofocus: true, autocomplete: "username", class: 'form-control' %>
              </div>
            </div>

            <div class="form-group">
              <div class="col-sm">
                <%= f.label :email, 'Email', class: 'col-sm-4 control-label' %><br />
              </div>
              <div class="col-sm">
                <%= f.email_field :email, autocomplete: "email", class: 'form-control' %>
              </div>
            </div>

            <div class="form-group">
              <div class="col-sm">
                <%= f.label :password, 'Password', class: 'col-sm-8 control-label' do %>
                  Password
                  <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> characters minimum)</em>
                  <% end %>
                <% end %>
              </div>
              <div class="col-sm">
                <%= f.password_field :password, class: 'form-control' %>
              </div>
            </div>

            <div class="form-group">
              <div class="col-sm">
                <%= f.label :password_confirmation, class: 'col-sm-8 control-label' %>
              </div>
              <div class="col-sm">
                <%= f.password_field :password_confirmation, class: 'form-control' %>
              </div>
            </div>

            <div class="form-group">
              <div class="col-sm">
                <%= f.submit "Sign up", class: 'btn btn-success btn-block' %>
              </div>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
    <div class="col-sm"></div>
  </div>
</div>
